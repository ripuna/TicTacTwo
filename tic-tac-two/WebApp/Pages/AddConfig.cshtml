@page
@model WebApp.Pages.AddConfig

@{ ViewData["Title"] = "Add Config"; }


<div class="config-container">
    <h3 class="config-title">Add Config</h3>

    <form method="post" class="form-horizontal">
        <div class="form-row">
            <div class="form-col">
                <div class="form-group">
                    <label for="Name" class="form-label">Config Name:</label>
                    <input asp-for="Name" class="form-control" id="Name"/>
                </div>
                <div class="form-group">
                    <label for="BWidth" class="form-label">Board Width:</label>
                    <input asp-for="BWidth" class="form-control" id="BWidth"/>
                </div>
                <div class="form-group">
                    <label for="BHeight" class="form-label">Board Height:</label>
                    <input asp-for="BHeight" class="form-control" id="BHeight"/>
                </div>
                <div class="form-group">
                    <label for="GWidth" class="form-label">Grid Width:</label>
                    <input asp-for="GWidth" class="form-control" id="GWidth"/>
                </div>
            </div>
            <div class="form-col">
                <div class="form-group">
                    <label for="GHeight" class="form-label">Grid Height:</label>
                    <input asp-for="GHeight" class="form-control" id="GHeight"/>
                </div>
                <div class="form-group">
                    <label for="WinCond" class="form-label">Pieces in a row to win:</label>
                    <input asp-for="WinCond" class="form-control" id="WinCond"/>
                </div>
                <div class="form-group">
                    <label for="MovesBeforeGrid" class="form-label">Moves before grid can be moved:</label>
                    <input asp-for="MovesBeforeGrid" class="form-control" id="MovesBeforeGrid"/>
                </div>
                <div class="form-group">
                    <label for="PieceCount" class="form-label">Piece count:</label>
                    <input asp-for="PieceCount" class="form-control" id="PieceCount"/>
                </div>
                <div class="form-group">
                    <label for="MovablePieces" class="form-label">Can pieces be moved:</label>
                    <input asp-for="MovablePieces" class="form-check-input" type="checkbox" id="MovablePieces"/>
                </div>
            </div>
        </div>
        <input type="submit" value="Start" class="btn btn-primary btn-submit"/>

        @foreach (var message in Model.Messages)
        {
            <div class="form-note">
                @message
            </div>
        }
    </form>
</div>